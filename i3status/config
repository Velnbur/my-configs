# i3status configuration file.  # see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
 		output_format = "i3bar"
		color_good = "#FFA700"
  		color_degraded = "#FFFC00"
  		color_bad = "#FF0000"
}

#order += "ipv6"
order += "wireless _first_"
order += "volume master"
#order += "ethernet _first_"
order += "battery all"
#order += "disk /"
#order += "load"
order += "memory"
order += "cpu_usage"
order += "tztime local"

volume master {
    format = " %volume" # шаблон громкости в активном состоянии
    format_muted = " %volume" # шаблон громкости в состоянии muted (без звука)
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

wireless _first_ {
#        format_up = "W: (%quality at %essid) %ip"
        format_up = "%quality %frequency"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage"

		# true - показ процента заряда от 0 до 100
		# false - показ процента заряда от 0 до n, с учетом
		# изношенности аккумулятора
		last_full_capacity = true
		status_chr = ""
		status_bat = ""
		status_unk = "? UNK"
		status_full = ""
		path = "/sys/class/power_supply/BAT%d/uevent"

		low_threshold = 10
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
		format = " %used"
        threshold_degraded = "1G"
		threshold_critical = "200M"
        format_degraded = "MEMORY < %available"
}

cpu_usage {
	format = " %usage"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
